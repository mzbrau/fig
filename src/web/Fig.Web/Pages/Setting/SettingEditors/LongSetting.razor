@using Fig.Web.Models.Setting.ConfigurationModels
<div class="d-flex flex-column w-100">
    <RadzenNumeric TValue="long?" @bind-Value="@Setting.Value" Disabled="@Setting.IsReadOnly"
                   Change="@(args => Setting.ValueChanged(args?.ToString() ?? string.Empty))"
                   @oninput="@(args => Setting.ValueChanged(args?.Value?.ToString() ?? string.Empty))" Class="w-100" data-test-id="@Setting.Name"/>
    <p class="@(Setting.IsValid ? "collapse" : "")" style="color: pink; font-size: small" data-test-id="@($"{Setting.Name}-validation")">@Setting.ValidationExplanation</p>
</div>


@code
{
    
    [Parameter]
    public LongSettingConfigurationModel Setting { get; set; } = null!;
}