@using System.Globalization
@using Fig.Web.Models.Setting.ConfigurationModels
<div class="d-flex flex-column w-100">
    <RadzenNumeric TValue="double?" @bind-Value="@Setting.Value" Disabled="@Setting.IsReadOnly"
                   Change="@(args => Setting.ValueChanged(Convert.ToString(args, CultureInfo.InvariantCulture)))"
                   @oninput="@(args => Setting.ValueChanged(Convert.ToString(args?.Value, CultureInfo.InvariantCulture) ?? string.Empty))" Class="w-100" data-test-id="@Setting.Name"/>
    <p class="@(Setting.IsValid ? "collapse" : "")" style="color: pink; font-size: small" data-test-id="@($"{Setting.Name}-validation")">@Setting.ValidationExplanation</p>
</div>


@code
{
    
    [Parameter]
    public DoubleSettingConfigurationModel Setting { get; set; } = null!;
}