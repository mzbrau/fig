@using System.Globalization
@using Fig.Common.NetStandard.Scripting
@using Fig.Web.Models.Setting.ConfigurationModels.DataGrid
<input type="number" class="rz-textbox" style="width: 100%;" value="@LongModel.Value" @oninput="SetValue" @onkeydown="HandleKeyDown"/>

@code {

    [Parameter]
    public IDataGridValueModel Model { get; set; } = null!;
    
    [Parameter]
    public EventCallback OnEnterPressed { get; set; }

    private DataGridValueModel<long> LongModel => (Model as DataGridValueModel<long>)!;
    
    private Task SetValue(ChangeEventArgs args)
    {
        if (long.TryParse(Convert.ToString(args.Value, CultureInfo.InvariantCulture), out var result))
        {
            LongModel.Value = result;
        }
        return Task.CompletedTask;
    }
    
    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await OnEnterPressed.InvokeAsync();
        }
    }
}