@page "/authentication/logout-callback"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <h2 class="text-center">Logout Complete</h2>
        <p class="text-center">You have been successfully signed out.</p>
        <div class="d-flex justify-content-center mt-4">
            <RadzenButton Text="Return to Home" Click="ReturnToHome" ButtonStyle="ButtonStyle.Primary" />
        </div>
    </div>
</div>

@code {
    private void ReturnToHome()
    {
        Navigation.NavigateTo("/");
    }

    protected override void OnInitialized()
    {
        ReturnToHome();
    }
}

<style>
    .auth-container {
        display: flex;
        height: 100vh;
        justify-content: center;
        align-items: center;
        background-color: #121212;
    }

    .auth-card {
        background-color: #1e1e1e;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        width: 400px;
        color: white;
    }
</style>