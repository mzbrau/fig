<Window x:Class="Fig.Dpapi.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fig.Dpapi.Client"
        mc:Ignorable="d"
        Title="Fig DPAPI Client" 
        Height="520" 
        Width="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <!-- Dark title bar style -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" 
                     ResizeBorderThickness="5"
                     GlassFrameThickness="0"
                     CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header and Instructions Section (Left) -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,0">
            <!-- Header -->
            <TextBlock Text="Fig DPAPI Client" 
                      Style="{StaticResource HeaderTextStyle}"
                      Margin="0,0,0,4"/>
            <TextBlock Text="Secure client secret encryption tool" 
                      Style="{StaticResource DescriptionTextStyle}"
                      Margin="0,0,0,15"/>
            
            <!-- Instructions Section -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="📋 Instructions" 
                              Style="{StaticResource LabelTextStyle}"
                              Margin="0,0,0,10"/>
                    
                    <TextBlock Style="{StaticResource DescriptionTextStyle}" 
                              Margin="0,0,0,6">
                        • Generate a client secret or manually provide one
                    </TextBlock>
                    
                    <TextBlock Style="{StaticResource DescriptionTextStyle}" 
                              Margin="0,0,0,6">
                        • Paste encrypted text to view the original secret
                    </TextBlock>
                    
                    <TextBlock Style="{StaticResource DescriptionTextStyle}" 
                              Margin="0,0,0,6">
                        • Use as environment variable: FIG_[YOURAPPNAME]_SECRET
                    </TextBlock>
                    
                    <TextBlock Style="{StaticResource DescriptionTextStyle}">
                        • Visual Studio loads environment variables on startup only
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Logo (Right) -->
        <Image Grid.Row="0" 
               Grid.Column="1" 
               Source="/Fig.Dpapi.Client;component/fig_logo.png" 
               Width="90" 
               Height="135"
               VerticalAlignment="Top"
               Margin="0,10,0,0"/>

        <!-- Warning Section (Full Width) -->
        <Border Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#2D2416"
                BorderBrush="#FDB022"
                BorderThickness="2"
                CornerRadius="6"
                Padding="14"
                Margin="0,20,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                          Text="⚠️" 
                          FontSize="18" 
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Important: User Context Required" 
                              Style="{StaticResource WarningTextStyle}"
                              FontSize="13"
                              Margin="0,0,0,4"/>
                    <TextBlock Style="{StaticResource DescriptionTextStyle}"
                              Foreground="#FDB022">
                        <Run Text="Must be run as the same user as your application."/>
                        <Run Text="{Binding CurrentUserExplanation, StringFormat='Current user: {0}'}" 
                             FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Plain Text Section (Full Width) -->
        <Border Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="18"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Plain Text Secret"
                          Style="{StaticResource LabelTextStyle}"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"/>

                <TextBox Grid.Column="1"
                        Style="{StaticResource ModernTextBoxStyle}"
                        Text="{Binding PlainText, UpdateSourceTrigger=PropertyChanged}" 
                        VerticalAlignment="Center"
                        Height="36"
                        Margin="0,0,15,0"/>

                <Button Grid.Column="2"
                       Style="{StaticResource ModernButtonStyle}"
                       Content="🔄 Generate New Secret"
                       Click="OnGenerateSecret"
                       VerticalAlignment="Center"
                       MinWidth="180"
                       Height="36"/>
            </Grid>
        </Border>

        <!-- Encrypted Text Section (Full Width) -->
        <Border Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                          Grid.Column="0"
                          Text="Encrypted Text"
                          Style="{StaticResource LabelTextStyle}"
                          VerticalAlignment="Top"
                          Margin="0,8,15,0"/>

                <TextBox Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource ModernTextBoxStyle}"
                        Text="{Binding EncryptedText, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Disabled"
                        Height="110"
                        VerticalAlignment="Top"
                        Margin="0,0,15,0"/>

                <Button Grid.Row="0"
                       Grid.Column="2"
                       Style="{StaticResource ModernButtonStyle}"
                       Content="📋 Copy to Clipboard"
                       Click="OnCopyEncryptedText"
                       VerticalAlignment="Top"
                       MinWidth="180"
                       Height="36"
                       Margin="0,8,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
